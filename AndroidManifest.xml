<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.evertour_guide"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="my.application.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.evertour_guide.LogoScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.evertour_guide.NotSignedIn"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.evertour_guide.Signup"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.evertour_guide.Signin"
            android:screenOrientation="portrait" >
        </activity>
        <activity 
            android:name="com.example.evertour_guide.MainScreen"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.example.evertour_guide.Profiles"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.example.evertour_guide.Timetable"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
        </activity>
        <activity 
            android:name="com.example.evertour_guide.AddTimeslot"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.example.evertour_guide.AddPlace"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.example.evertour_guide.PlaceList"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>